{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "types": [
      "@types/bun" // Use the new Bun types package
    ],
    "paths": {
      "@components/*": [
        "src/components/*"
      ],
      "@mytypes/*": [
        "src/types/*"
      ],
      "@lib/database/*": [
        "src/lib/database/*"
      ],
    }
  }
}