---
import Icon from '@components/Icon.astro';
const { iconName, iconClass, label } = Astro.props;
---

<button
    class="md:w-72 w-64 py-3 px-3 md:py-3 md:px-4 mt-6 md:mt-4 text-base md:text-base rounded-lg shadow-md bg-gray-100 border-gray-300 border-4 hover:bg-gray-200 text-gray-800 dark:bg-gray-100 dark:text-gray-800 dark:hover:bg-gray-200 flex items-center"
>
    <div class="flex-shrink-0 mr-1 md:mr-2">
        <Icon name={iconName} class={iconClass} size={36} />
    </div>
    <span class="text-sm md:text-lg flex-1 text-center">{label}</span>
</button>